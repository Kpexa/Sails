<h1 class="display-4">Книги</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>id</th>
      <th><a href="/books/filter_title_by_non_alphabet"><i class="fas fa-angle-up"></i></a> Назва <a href="/books/filter_title_by_alphabet"><i class="fas fa-angle-down"></i></a></th>
      <th><a href="/books/filter_body_by_non_alphabet"><i class="fas fa-angle-up"></i></a> Жанр <a href="/books/filter_body_by_alphabet"><i class="fas fa-angle-down"></i></a></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% books.forEach(function(book){ %>
      <tr>
        <td><%= book.id %></td>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td>
          <a href="/books/edit/<%= book.id %>" class="btn btn-primary">Змінити</a>
          <form action="/books/delete/<%= book.id %>" method="POST" class="d-inline">
            <input type="submit" value="Видалити" class="btn btn-danger">
          </form>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>